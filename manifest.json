{
    "manifest_version": 2,
    "name": "CaptionIt Extension",
    "description": "Caption your insta pics with ease.",
    "version": "1.0",
    "incognito": "spanning",
    "permissions": ["tabs", "contextMenus"],
    "content_scripts": [
        {
            "matches": ["https://*.instagram.com/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
